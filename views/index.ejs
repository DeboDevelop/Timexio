<%- include('partials/navbar.ejs') %>
<main role="main">
    <!-- Carousel starts -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img
                    src="https://images.unsplash.com/photo-1518953789413-9598f0909795?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
                    class="d-block w-100"
                    alt="img 1"
                />
            </div>
            <div class="carousel-item">
                <img
                    src="https://images.unsplash.com/photo-1495856458515-0637185db551?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
                    class="d-block w-100"
                    alt="img 2"
                />
            </div>
            <div class="carousel-item">
                <img
                    src="https://images.unsplash.com/photo-1582657233895-0f37a3f150c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"
                    class="d-block w-100"
                    alt="img 3"
                />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Carousel ends -->

    <!-- ? New Product Start -->
    <section class="mt-5 mb-5 section-padding30">
        <div class="container">
            <!-- Section tittle -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-tittle mb-70">
                        <h2>New Arrivals</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <% newArrivalProducts.forEach(product => { %> <%- include('partials/product-snippet-wide.ejs',
                {product}) %> <% }) %>
            </div>
        </div>
    </section>
    <!--  New Product End -->
    <!--? Gallery Area Start -->
    <div class="gallery-area section-padding30">
        <div class="container fix">
            <div class="section-tittle mb-70">
                <h2>Featured</h2>
            </div>
            <div class="row">
                <% featuredProducts.forEach(product => { %> <%- include('partials/product-snippet-wide.ejs', {product})
                %> <% }) %>
            </div>
        </div>
    </div>
    <!-- Gallery Area End -->
    <!--? Popular Items Start -->
    <div class="popular-items section-padding30">
        <div class="container">
            <!-- Section tittle -->
            <div class="row">
                <div class="col-12">
                    <div class="section-tittle mb-70">
                        <h2>Popular Items</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <% popularProducts.forEach(product => { %> <%- include('partials/product-snippet-wide.ejs', {product})
                %> <% }) %>
            </div>
        </div>
    </div>
    <!-- Popular Items End -->

    <!--? Shop Method Start-->
    <div class="shop-method-area">
        <div class="container">
            <div class="method-wrapper">
                <div class="row d-flex justify-content-between">
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="single-method mb-40">
                            <i class="ti-package"></i>
                            <h6>Free Shipping Method</h6>
